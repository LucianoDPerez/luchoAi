{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h5><a href="{{ path('app_mk_conn_index') }}">{{ "backend.mk_conn.listing"|trans }}</a></h5>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>{{ "backend.menu.mk_conn"|trans }}</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>{{ "backend.mk_conn.host"|trans }}</th>
                                <th>{{ "backend.mk_conn.user"|trans }}</th>
                                <th>{{ "backend.mk_conn.port"|trans }}</th>
                                <th>{{ "backend.mk_conn.actions"|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for conn in connections %}
                                <tr>
                                    <td>{{ conn.host }}</td>
                                    <td>{{ conn.user }}</td>
                                    <td>{{ conn.port }}</td>
                                    <td>
                                        <a href="{{ path('app_mk_conn_edit', {'id': conn.id}) }}">{{ "backend.mk_conn.edit"|trans }}</a>
                                        <a href="{{ path('app_mk_conn_delete', {'id': conn.id}) }}">{{ "backend.mk_conn.delete"|trans }}</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}