{
  "expo": {
    "name": "Gemini Chat-Bot",
    "slug": "Beginner Level ChatBot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/robot.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icons/robot.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],    
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Esta aplicación necesita acceso al micrófono para grabar audio."
      },
      "bundleIdentifier": "chatbottest"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/robot.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO"
      ],
      "package": "chatboxtest.com"
    },
    "web": {
      "favicon": "./assets/icons/robot.png"
    },
    "plugins": [
      "expo-system-ui",
      "expo-router",
      "expo-font"
    ],
    "permissions": [
      "location"
    ]
  }
}
